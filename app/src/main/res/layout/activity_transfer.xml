<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.TransactionActivity"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            app:cornerRadius="10dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:layout_margin="16dp"
            app:iconTint="@color/primary_text"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_close"
            android:contentDescription="@string/close_page_btn"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_page_new_transfer"
            android:hint="@string/title_page_new_transfer"
            android:textColor="@color/primary_text"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="@+id/btnReturn"
            app:layout_constraintBottom_toBottomOf="@+id/btnReturn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/list_accounts_background"
        android:backgroundTint="@color/background_card"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttonSave"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/containerDateTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/dateTransfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:drawableStartCompat="@drawable/ic_baseline_edit_calendar_24"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:drawablePadding="5dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/amountTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/amount_transfer_title"
                    app:layout_constraintEnd_toEndOf="@+id/containerDateTransfer"
                    app:layout_constraintStart_toStartOf="@+id/containerDateTransfer"
                    app:layout_constraintTop_toBottomOf="@+id/containerDateTransfer"
                    android:layout_marginTop="16dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:startIconDrawable="@drawable/ic_cash_multiple"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:digits="0123456789."
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/noteTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/input_text_note_transaction"
                    app:layout_constraintStart_toStartOf="@+id/amountTransfer"
                    app:layout_constraintEnd_toEndOf="@+id/amountTransfer"
                    app:layout_constraintTop_toBottomOf="@+id/amountTransfer"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:startIconDrawable="@drawable/ic_note"
                    app:errorEnabled="true"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnAccountTransferOut"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:minWidth="48dp"
                        android:minHeight="48dp"
                        app:cardBackgroundColor="@color/background"
                        android:padding="5dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toBottomOf="@+id/noteTransfer"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="@+id/noteTransfer"
                        app:layout_constraintEnd_toEndOf="@+id/noteTransfer">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconAccountTransferOut"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:tint="@color/primary"
                                android:contentDescription="@string/transfer_from"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <TextView
                                android:id="@+id/nameAccountTransferOut"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="marquee"
                                android:lines="1"
                                android:textColor="@color/primary_text"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fadingEdge="horizontal"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                app:layout_constraintTop_toTopOf="@+id/iconAccountTransferOut"
                                app:layout_constraintBottom_toBottomOf="@+id/iconAccountTransferOut"
                                app:layout_constraintStart_toEndOf="@+id/iconAccountTransferOut"
                                app:layout_constraintEnd_toStartOf="@+id/iconArrow"
                                />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconArrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_menu_down"
                                android:tint="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/iconAccountTransferOut"
                                app:layout_constraintBottom_toBottomOf="@+id/iconAccountTransferOut"

                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/containerIconTransfer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="@+id/btnAccountTransferOut"
                    app:layout_constraintEnd_toEndOf="@+id/btnAccountTransferOut"
                    app:layout_constraintTop_toBottomOf="@+id/btnAccountTransferOut"
                    app:layout_constraintBottom_toTopOf="@+id/btnAccountTransferIn"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_transfer_down"
                        app:tint="@color/secondary_text"
                        />
                </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnAccountTransferIn"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:clickable="true"
                        android:minWidth="48dp"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        android:padding="6dp"
                        app:layout_constraintTop_toBottomOf="@+id/containerIconTransfer"
                        app:layout_constraintStart_toStartOf="@+id/containerIconTransfer"
                        app:layout_constraintEnd_toEndOf="@+id/containerIconTransfer">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconAccountTransferIn"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/transfer_to"
                                app:layout_constraintTop_toTopOf="parent"
                                android:tint="@color/primary"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                android:layout_marginStart="6dp"/>

                            <TextView
                                android:id="@+id/nameAccountTransferIn"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:ellipsize="marquee"
                                android:lines="1"
                                android:textColor="@color/primary_text"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:fadingEdge="horizontal"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"
                                app:layout_constraintTop_toTopOf="@+id/iconAccountTransferIn"
                                app:layout_constraintBottom_toBottomOf="@+id/iconAccountTransferIn"
                                app:layout_constraintStart_toEndOf="@+id/iconAccountTransferIn"
                                app:layout_constraintEnd_toStartOf="@+id/iconArrow1"
                                />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconArrow1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_menu_down"
                                android:tint="@color/primary_text"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/iconAccountTransferIn"
                                app:layout_constraintBottom_toBottomOf="@+id/iconAccountTransferIn"

                                />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </com.google.android.material.card.MaterialCardView>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:elevation="10dp"
            android:textColor="@color/text_button"
            android:text="@string/save_button_transfer"
            android:textSize="16sp"
            android:gravity="center"
            android:contentDescription="@string/save_button_transaction"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="16dp"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="22dp"
            app:cornerRadius="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>