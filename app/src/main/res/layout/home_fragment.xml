<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <TextView
        android:id="@+id/titleTextHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/hello_text"
        android:textColor="@color/primary_text"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextSpender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spender_text"
        android:textColor="@color/primary_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/titleTextHello"
        app:layout_constraintTop_toBottomOf="@+id/titleTextHello" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_baseline_notifications_24"
        app:layout_constraintBottom_toBottomOf="@+id/titleTextSpender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextHello"
        app:tint="@color/primary_text"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        />

    <!-- Account info -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/background_card"
        app:layout_constraintTop_toBottomOf="@+id/titleTextSpender"
        app:layout_constraintStart_toStartOf="@+id/titleTextSpender"
        app:layout_constraintEnd_toEndOf="@+id/iconHomeFragment"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="14dp">
            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/name_first_account"
                android:textColor="@color/primary_text"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/accountBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="@string/more_text"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/primary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                />

            <LinearLayout
                android:id="@+id/containerAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accountName">
                <TextView
                    android:id="@+id/moneyAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:text="@string/money_account"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    app:drawableEndCompat="@drawable/ic_euro"
                    app:drawableTint="@color/primary_text"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Button -->
    <LinearLayout
        android:id="@+id/containerAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/cardHeader">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_plus"
                app:iconTint="@color/background"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:elevation="20dp"
                app:cornerRadius="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_type_income"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_text"
                android:textStyle="normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            android:elevation="10dp">
            <com.google.android.material.button.MaterialButton
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                android:backgroundTint="@color/secondary"
                app:icon="@drawable/ic_minus"
                app:iconTint="@color/background"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                android:elevation="20dp"
                app:cornerRadius="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_type_expenses"
                android:layout_marginTop="5dp"
                android:textColor="@color/primary_text"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Transaction -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerTransactions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/background_card"
        android:orientation="vertical"
        android:elevation="20dp"
        android:background="@drawable/container_last_transactions_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/containerAction">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintTitleLastTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/titleLastTransactions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_transactions"
                android:textColor="@color/primary_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_all"
                android:textColor="@color/primary"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/titleLastTransactions"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/titleLastTransactions"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ListView
            android:id="@+id/listLastTransactions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintTitleLastTransaction"
            app:layout_constraintStart_toStartOf="@+id/constraintTitleLastTransaction"
            app:layout_constraintTop_toBottomOf="@+id/constraintTitleLastTransaction"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_list_transactions"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/constraintTitleLastTransaction"
            app:layout_constraintStart_toStartOf="@+id/constraintTitleLastTransaction"
            app:layout_constraintTop_toBottomOf="@+id/constraintTitleLastTransaction" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>