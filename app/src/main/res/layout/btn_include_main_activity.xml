<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cardViewTransaction"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    app:iconTint="@color/icon_main_color"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_transactions"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_transaction_menu"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewTransaction"
                    app:layout_constraintStart_toStartOf="@+id/cardViewTransaction"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewTransaction"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/secondary_text"
                    android:textSize="11sp"
                    android:transitionName="transition_transaction_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cardViewStatistics"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:iconTint="@color/icon_main_color"
                    app:icon="@drawable/ic_statistics"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_statistics_menu"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewStatistics"
                    app:layout_constraintStart_toStartOf="@+id/cardViewStatistics"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewStatistics"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/secondary_text"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cardViewAccount"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:iconTint="@color/icon_main_color"
                    app:icon="@drawable/ic_accounts"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/accounts"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewAccount"
                    app:layout_constraintStart_toStartOf="@+id/cardViewAccount"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewAccount"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/secondary_text"
                    android:transitionName="transition_account_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cardViewCategory"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:icon="@drawable/ic_categories"
                    app:iconGravity="textStart"
                    app:iconTint="@color/icon_main_color"
                    app:iconPadding="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/categories"
                    app:layout_constraintTop_toBottomOf="@+id/cardViewCategory"
                    app:layout_constraintStart_toStartOf="@+id/cardViewCategory"
                    app:layout_constraintEnd_toEndOf="@+id/cardViewCategory"
                    android:layout_marginTop="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/secondary_text"
                    android:transitionName="transition_category_title"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>