<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".manager.SettingsActivity"
    android:background="@color/background">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReturn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="48dp"
            app:cornerRadius="10dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:layout_margin="16dp"
            app:iconTint="@color/primary_text"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:icon="@drawable/ic_arrow_back"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:contentDescription="@string/come_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/titlePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_page_settings"
            android:hint="@string/title_page_settings"
            android:textColor="@color/primary_text"
            android:textStyle="normal"
            app:layout_constraintTop_toTopOf="@+id/btnReturn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/btnReturn"
            android:textSize="20sp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/linearToolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:overScrollMode="never">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/container1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp"
                    app:cardElevation="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/background_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <!-- Reminder -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/containerReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconReminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_notifications"
                                android:layout_margin="16dp"
                                android:contentDescription="@string/settings_page_icon_reminder"/>
                            <TextView
                                android:id="@+id/titleReminder"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/primary_text"
                                android:text="@string/settings_page_title_reminder"
                                app:layout_constraintTop_toTopOf="@+id/iconReminder"
                                app:layout_constraintBottom_toBottomOf="@+id/iconReminder"
                                app:layout_constraintStart_toEndOf="@+id/iconReminder"
                                app:layout_constraintEnd_toStartOf="@+id/switchReminder"
                                android:layout_marginStart="16dp"
                                android:ellipsize="marquee"
                                android:lines="1"
                                android:fadingEdge="horizontal"
                                android:marqueeRepeatLimit="marquee_forever"
                                android:scrollHorizontally="true"/>
                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switchReminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/iconReminder"
                                app:layout_constraintBottom_toBottomOf="@+id/iconReminder"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:layout_marginEnd="16dp"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:id="@+id/line1"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background"
                            app:layout_constraintStart_toStartOf="@+id/containerReminder"
                            app:layout_constraintTop_toBottomOf="@+id/containerReminder"
                            app:layout_constraintEnd_toEndOf="@+id/containerReminder"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                        <!-- Theme -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/containerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            app:layout_constraintStart_toStartOf="@+id/containerReminder"
                            app:layout_constraintEnd_toEndOf="@+id/containerReminder"
                            app:layout_constraintTop_toBottomOf="@+id/line1"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconTheme"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_theme"
                                android:layout_margin="16dp"
                                android:contentDescription="@string/settings_page_icon_theme"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/iconTheme"
                                app:layout_constraintBottom_toBottomOf="@+id/iconTheme"
                                app:layout_constraintStart_toEndOf="@+id/iconTheme"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/titleTheme"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/primary_text"
                                    android:text="@string/settings_page_title_theme"
                                    />
                                <TextView
                                    android:id="@+id/titleThemeSelected"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/secondary_text"
                                    android:textStyle="italic"
                                    android:textSize="12sp"
                                    app:layout_constraintTop_toBottomOf="@+id/titleTheme"
                                    app:layout_constraintBottom_toBottomOf="@+id/iconTheme"
                                    app:layout_constraintStart_toEndOf="@+id/iconTheme"
                                    android:text="@string/settings_page_theme_light"/>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <View
                            android:id="@+id/line2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background"
                            app:layout_constraintStart_toStartOf="@+id/containerTheme"
                            app:layout_constraintTop_toBottomOf="@+id/containerTheme"
                            app:layout_constraintEnd_toEndOf="@+id/containerTheme"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"/>
                        <!-- Theme -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/containerCurrency"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            app:layout_constraintStart_toStartOf="@+id/containerTheme"
                            app:layout_constraintEnd_toEndOf="@+id/containerTheme"
                            app:layout_constraintTop_toBottomOf="@+id/line2"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?selectableItemBackground">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/iconCurrency"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:src="@drawable/ic_currency"
                                android:layout_margin="16dp"
                                android:contentDescription="@string/settings_page_icon_currency"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@+id/iconCurrency"
                                app:layout_constraintBottom_toBottomOf="@+id/iconCurrency"
                                app:layout_constraintStart_toEndOf="@+id/iconCurrency"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/titleCurrency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:textColor="@color/primary_text"
                                    android:text="@string/settings_page_title_currency"
                                    />
                                <TextView
                                    android:id="@+id/titleCurrencySelected"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/secondary_text"
                                    android:textStyle="italic"
                                    android:textSize="12sp"
                                    android:text="@string/settings_page_title_currency_selected_off"/>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>