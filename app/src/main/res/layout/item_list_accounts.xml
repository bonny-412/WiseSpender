<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="horizontal"
    android:id="@+id/mainLayout">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:elevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/background"
                app:cardElevation="0dp"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView
                        android:contentDescription="@string/accounts"
                        android:id="@+id/iconAccount"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_margin="8dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/cardViewIcon"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewIcon"
                app:layout_constraintTop_toTopOf="@+id/cardViewIcon"
                app:layout_constraintEnd_toStartOf="@+id/imageView"
                android:layout_marginEnd="16dp">
                <TextView
                    android:id="@+id/titleAccount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/containerMoney"

                    android:ellipsize="marquee"
                    android:lines="1"
                    android:fadingEdge="horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    />
                <LinearLayout
                    android:id="@+id/containerMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/titleAccount"
                    app:layout_constraintStart_toStartOf="@+id/titleAccount"
                    app:layout_constraintEnd_toEndOf="@+id/titleAccount"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:gravity="start">
                    <TextView
                        android:id="@+id/totMoneyAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold"
                        android:ellipsize="marquee"
                        android:lines="1"
                        android:fadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"/>
                    <TextView
                        android:id="@+id/currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/secondary_text"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:src="@drawable/ic_icon_arrow_right_item_list"
                android:tint="@color/tertiary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/cardViewIcon"
                app:layout_constraintBottom_toBottomOf="@+id/cardViewIcon"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>