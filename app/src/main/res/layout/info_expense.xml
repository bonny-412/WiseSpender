<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iconTotalExpense"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_arrow_down"
        android:tint="@color/secondary"
        app:layout_constraintEnd_toStartOf="@+id/totalExpense"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/totalExpense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginEnd="10dp"
        android:textSize="15sp"
        android:drawableEnd="@drawable/ic_euro"
        app:layout_constraintStart_toEndOf="@+id/iconTotalExpense"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iconTotalExpense"
        app:layout_constraintBottom_toBottomOf="@+id/iconTotalExpense"/>



</androidx.constraintlayout.widget.ConstraintLayout>